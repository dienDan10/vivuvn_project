# Production Environment Variables Template
# Copy this file to .env.prod and update with your production values
# NEVER commit .env.prod to version control!

# SQL Server Configuration
# IMPORTANT: Use a strong password (8+ chars with upper, lower, numbers, symbols)
SA_PASSWORD=CHANGE-TO-STRONG-PASSWORD

# API Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80

# JWT Configuration - CHANGE THESE FOR PRODUCTION!
# Generate a secure key: openssl rand -base64 64
JWT_SECRET_KEY=CHANGE-TO-SECURE-BASE64-KEY
JWT_ISSUER=https://your-domain.com/
JWT_AUDIENCE=https://your-domain.com/

# Brevo Email Service
BREVO_API_KEY=CHANGE-TO-YOUR-BREVO-API-KEY
BREVO_SENDER_EMAIL=CHANGE-TO-YOUR-SENDER-EMAIL

# Google Services
GOOGLE_MAPS_API_KEY=CHANGE-TO-YOUR-GOOGLE-MAPS-KEY
GOOGLE_MAPS_ROUTE_URL=https://routes.googleapis.com
GOOGLE_MAPS_PLACE_URL=https://places.googleapis.com
GOOGLE_OAUTH_CLIENT_ID=CHANGE-TO-YOUR-GOOGLE-OAUTH-CLIENT-ID

# AI Services
AI_SERVICE_BASE_URL=http://vivuvn-ai-service:8000

# Client URLs
ADMIN_PANEL_URL=https://your-admin-domain.com

