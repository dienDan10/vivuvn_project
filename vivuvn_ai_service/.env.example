# ViVu Vietnam AI Service - Standalone Configuration
# This service only needs Pinecone + Google AI + OpenWeather - no database required

# =============================================================================
# AI Configuration
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# =============================================================================
# OpenWeather API Configuration (for weather forecasts)
# =============================================================================
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/3.0
OPENWEATHER_TIMEOUT=30.0
OPENWEATHER_MAX_CONCURRENT=10

# =============================================================================
# Pinecone Serverless Configuration (v6+ with gRPC support)
# =============================================================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=vivuvn-travel
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1
PINECONE_DEFAULT_NAMESPACE=travel_location
PINECONE_METRIC=cosine
PINECONE_INCLUDE_VALUES=False
PINECONE_SHOW_PROGRESS=False

# =============================================================================
# Vector Configuration (Google Gemini embedding model)
# =============================================================================
VECTOR_DIMENSION=768
EMBEDDING_MODEL=gemini-embedding-001

# Gemini Embedding Task Types (for optimization)
EMBEDDING_TASK_TYPE_DOCUMENT=RETRIEVAL_DOCUMENT
EMBEDDING_TASK_TYPE_QUERY=RETRIEVAL_QUERY

# =============================================================================
# Vector Search Configuration (Dynamic top_k)
# =============================================================================
VECTOR_SEARCH_BASE_K=8
VECTOR_SEARCH_MIN_K=8
VECTOR_SEARCH_MAX_K=35
VECTOR_SEARCH_ACTIVITIES_PER_DAY=3.0
VECTOR_SEARCH_DIVERSITY_FACTOR=1.5

# =============================================================================
# Application Configuration
# =============================================================================
API_V1_STR=/api/v1
PROJECT_NAME=ViVu Vietnam AI Service
VERSION=0.1.0
LOG_LEVEL=INFO
DEBUG=False

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# AI Generation Settings
# =============================================================================
MAX_TOKENS=20000
TEMPERATURE=0.15

# Prompt Optimization Settings
TOP_PLACES_WITH_DESCRIPTION=3
DESCRIPTION_MAX_LENGTH=60
COORD_DECIMAL_PLACES=2
MIN_ACTIVITIES_PER_DAY=3
BUDGET_TIER_ECONOMY=500000
BUDGET_TIER_MID_RANGE=1500000
BUDGET_TIER_COMFORT=3000000

# =============================================================================
# CORS Configuration
# =============================================================================
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]