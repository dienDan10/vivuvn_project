# ViVu Vietnam AI Service - Standalone Configuration
# This service only needs Pinecone + Google AI - no database required

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Pinecone Serverless Configuration (v6+ with gRPC support)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=vivuvn-travel
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1
PINECONE_DEFAULT_NAMESPACE=travel_location

# Vector Configuration (Google Gemini embedding model)
VECTOR_DIMENSION=768
EMBEDDING_MODEL=gemini-embedding-001

# Gemini Embedding Task Types (for optimization)
EMBEDDING_TASK_TYPE_DOCUMENT=RETRIEVAL_DOCUMENT
EMBEDDING_TASK_TYPE_QUERY=RETRIEVAL_QUERY

# Application Configuration
API_V1_STR=/api/v1
PROJECT_NAME=ViVu Vietnam AI Service
LOG_LEVEL=INFO
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8000

# AI Generation Settings
MAX_TOKENS=2048
TEMPERATURE=0.5

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]